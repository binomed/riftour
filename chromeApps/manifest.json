{
  "name": "Oculus Rift Arduino Extension",
  "version": "1.0",
  "manifest_version": 2,
  "minimum_chrome_version": "23",
  "description": "Arduino & Oculus Rift",
  "app": {
    "background": {
      "scripts": [ "background.js" ]
    }
  },

  "icons": {
    "16": "assets/icon-16x16.jpeg",
    "128": "assets/icon-128x128.jpeg"
  },

  "permissions": [
    "serial"
  ]
}
